{
    "logging"   : { "filename" : true, "driver-station" : true, "dashboard" : true, "level" : "info" },
    "robot"     : {
        "subsystems" : {
            "outtake-slides" : {
                "type" : "default-slides",
                "motors" : [
                    { "hwmap": "outtakeSlidesLeft", "direction": "reverse" },
                    { "hwmap": "outtakeSlidesRight" }
                ],
                "positions": {
                    "min": 0,
                    "retracted": 1300,
                    "max": 3726,
                    "transfer": 0,
                    "autonomous-sample-ascend" : 710,
                    "autonomous-specimen-submersible-under" : 690,
                    "autonomous-specimen-submersible-over" : 870
                },
                "powers": {
                    "set-position": 1.0,
                    "hold-position": 0.3,
                    "stop": 0
                }
            }
        }
    },
    "control"   : {

        "controllers": {
            "1": [
                { "axis": "left_stick_y",  "deadzone": 0.1, "maximum": 1.0 },
                { "axis": "left_stick_x",  "deadzone": 0.1, "maximum": 1.0 },
                { "axis": "right_stick_x", "deadzone": 0.1, "maximum": 1.0 }
            ]
        },
        "commands": [

            {  "action": "drive",
                "x": { "scale": 1.1, "input": "left_stick_x", "controller" : 1 },
                "y": { "scale": -1.0, "input": "left_stick_y", "controller" : 1 },
                "rotation": { "scale": 1.0, "input": "right_stick_x", "controller" : 1 }
            },
            { "action": "tuneDriveSpeed", "multiplier": 0.45, "condition": { "button": "left_bumper", "state": "pressed", "controller" : 1 } },
            { "action": "tuneDriveSpeed", "multiplier": 1.0, "condition": { "button": "left_bumper", "state": "notPressed", "controller" : 1 } },

            { "action": "powerOuttakeSlides", "power": 0.9,  "condition": { "button": "left_bumper", "state": "pressedOnce", "controller" : 2} },
            { "action": "powerOuttakeSlides", "power": -0.7, "condition": { "button": "right_bumper", "state": "pressedOnce", "controller" : 2}},
            { "action": "powerOuttakeSlides", "power": 0.0,  "condition": { "and": [
                { "button": "right_bumper","state": "notPressed"},
                { "button": "left_bumper", "state": "notPressed"}
            ]}},
            { "action": "positionOuttakeSlides", "position": "transfer", "condition": { "button": "right_stick_button", "state": "pressedOnce", "controller" : 2 }},

            { "action": "powerIntakeSlides", "power": { "scale": 0.9, "input": "left_trigger" },   "condition" : { "trigger" : "left_trigger", "threshold" : 0.01, "operation" : "greaterThan", "controller" : 2 }},
            { "action": "powerIntakeSlides", "power": { "scale": -0.7, "input": "right_trigger" }, "condition" : { "trigger" : "right_trigger", "threshold" : 0.01, "operation" : "greaterThan", "controller" : 2 }},
            { "action": "powerIntakeSlides", "power": { "scale": 0.0, "input": "right_trigger" },  "condition" : { "and" : [
                { "trigger" : "right_trigger", "threshold" : 0.01, "operation" : "lesserThan", "controller" : 2 },
                { "trigger" : "left_trigger",  "threshold" : 0.01, "operation" : "lesserThan", "controller" : 2 }
            ]}},

            { "action": "toggleOuttakeClaw",                    "condition": { "button": "x", "state": "pressedOnce", "controller" : 2 } },
            { "action": "moveOuttakeArm",  "direction": "down", "condition": { "button": "a", "state": "pressedOnce", "controller" : 2 }},
            { "action": "moveOuttakeArmw", "direction": "up",   "condition": { "button": "y", "state": "pressedOnce", "controller" : 2 }},

            { "action": "toggleIntakeClaw",                     "condition": { "button": "dpad_left",  "state": "pressedOnce", "controller" : 2 } },
            { "action": "moveIntakeArm",  "direction": "down",  "condition": { "button": "dpad_down",  "state": "pressedOnce", "controller" : 2 }},
            { "action": "moveIntakeArmw", "direction": "up",    "condition": { "button": "dpad_up",    "state": "pressedOnce", "controller" : 2 }},
            { "action": "toggleIntakeWrist",                    "condition": { "button": "dpad_right", "state": "pressedOnce", "controller" : 2 }},

            { "action": "transfer", "condition": { "button": "b", "state": "pressedOnce", "controller" : 2 }}

        ]
    }
}
